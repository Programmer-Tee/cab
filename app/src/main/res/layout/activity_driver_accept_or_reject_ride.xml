<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriverAcceptOrRejectRide">

    <Button
        android:id="@+id/AcceptRidebtn"
        android:layout_width="wrap_content"
        android:layout_height="87dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginEnd="58dp"
        android:layout_marginRight="58dp"
        android:layout_marginBottom="336dp"
        android:background="@color/colorPrimaryDark"
        android:text="ACCEPT RIDE"
        android:textColor="@android:color/white"
        android:textSize="32dp"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="382dp" />

    <Button
        android:id="@+id/RejectRidebtn"
        android:layout_width="wrap_content"
        android:layout_height="87dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="49dp"
        android:layout_marginLeft="49dp"
        android:layout_marginEnd="53dp"
        android:layout_marginRight="53dp"
        android:layout_marginBottom="97dp"
        android:background="@color/colorPrimaryDark"
        android:text="Reject Ride"
        android:textColor="@android:color/white"
        android:textSize="32dp"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="382dp" />

    <TextView
        android:id="@+id/textviewAcceptOrReject"
        android:layout_width="381dp"
        android:layout_height="104dp"
        android:layout_above="@+id/AcceptRidebtn"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="97dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="73dp"
        android:text="Do you wish to accept or reject ride? "
        android:textColor="@color/colorPrimaryDark"
        android:textSize="36dp"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="117dp" />

</RelativeLayout>